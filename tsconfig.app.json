{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* Linting - Optimized for Copilot suggestions */
    "strict": true, // Enable for better Copilot type inference
    "noImplicitAny": true, // Enable first strict check
    "strictNullChecks": true, // Better null safety suggestions
    "strictFunctionTypes": true, // Safe to enable
    "strictBindCallApply": true, // Safe to enable
    "strictPropertyInitialization": false, // Will enable later
    "noImplicitReturns": true, // Logical check
    "noImplicitThis": true, // Safe to enable
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    // "noUnusedLocals": true, // Will enable after fixing imports
    // "noUnusedParameters": true, // Will enable after cleanup
    // "erasableSyntaxOnly": true, // Will enable after enum fixes
    
  },
  "include": ["src"]
}
